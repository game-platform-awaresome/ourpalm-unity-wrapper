<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ourpalm_account_ui_loginwelcome_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ourpalm_ui_loginwelcom_icon"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ourpalm_ui_account_icon_customer" />

        <TextView
            android:id="@+id/ourpalm_ui_loginwelcom_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textColor="@color/ourpalm_color_f8b551"
            android:textSize="@dimen/ourpalm_ui_tip_textSize_16" />

        <TextView
            android:id="@+id/ourpalm_ui_loginwelcom_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="欢迎进入游戏"
            android:textColor="@color/ourpalm_color_black"
            android:textSize="@dimen/ourpalm_ui_tip_textSize_16" />
    </LinearLayout>

</RelativeLayout>